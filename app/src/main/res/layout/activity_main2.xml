<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/box_be_1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/square1"
            android:gravity="center"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/box_bl_1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/square2"
            android:gravity="center"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="350dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/box_be_6"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square1"
                android:gravity="center"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/box_bl_6"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square2"
                android:gravity="center"
                android:src="@drawable/ic_baseline_pedal_bike_24"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/box_a2"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square1"
                android:gravity="center"
                android:src="@drawable/ic_baseline_done_24"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="350dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/box_be_2"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square1"
                android:gravity="center"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/box_bl_2"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square2"
                android:gravity="center"
                android:src="@drawable/ic_baseline_add_24"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/box_a1"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square1"
                android:gravity="center"
                android:src="@drawable/ic_baseline_done_24"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/box_q1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/square2"
            android:gravity="center"
            android:src="@drawable/ic_baseline_add_24"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/box_q2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/square2"
            android:gravity="center"
            android:src="@drawable/ic_baseline_pedal_bike_24"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="350dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/box_be_5"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square1"
                android:gravity="center"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/box_bl_5"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square2"
                android:gravity="center"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="350dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/box_be_3"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square1"
                android:gravity="center"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/box_bl_3"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/square2"
                android:gravity="center"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/box_be_4"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/square1"
            android:gravity="center"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/box_bl_4"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/square2"
            android:gravity="center"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</LinearLayout>